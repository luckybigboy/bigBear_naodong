/* pages/my/my-attention/my-attention.wxss */
page {
  background-color: #f8f8f8;
}

.ul {
  background: #fff;
  margin-bottom: 20rpx;
}

.ul .li {
  position: relative;
  padding: 38rpx 20rpx;
  padding-left: 134rpx;
}

.ul .li span {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.ul .li .img {
  position: absolute;
  left: 20rpx;
  top: 17rpx;
  width: 84rpx;
  height: 84rpx;
}

.ul .li .button{
  position: absolute;
  right: 32rpx;
  top: 30rpx;
  width: 169rpx;
  height: 68rpx;
  font-size: 34rpx;
  line-height: 64rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  border: 1px solid #eee;
  color: #333;
}

.ul .li .isRuleShow {
  color: #fff;
  background-color: #F5A623;
  
}

/* 暂无关注 */

.hide {
  text-align: center;
}	

.hide .img {
  width: 385rpx;
  height: 206rpx;
  padding-top:312rpx;
}

.hide .cont {
  color: #999;
  font-size: 32rpx;
  padding-top:66rpx;
}
.hides{
  display: none;
}
