/* pages/my/my-edit-text/my-edit-text.wxss */
.content-img {
  width: 208rpx;
  height: 280rpx;
  margin: 0 auto;
  position: relative;
}
.content-img image {
  width: 100%;
  height: 100%;
}
.content-img image:nth-of-type(2) {
  width: 210rpx;
  height: 210rpx;
  position: absolute;
  left:50%;
  top: 50%;
  margin: -105rpx 0 0 -105rpx;
}
.text-content text {
  display: block;
  text-align: center;
  margin: 10rpx 0;
  font-size:24rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:34rpx;
}
.content-edit {
  width: 100%;
  position: absolute;
  left: 0;
  top: 350rpx;
  z-index: 2;
}
.content-edit button {
  display: inline-block;
  font-size:20rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:36rpx;
  background-color: #8E7037;
  padding: 2rpx 8rpx;
  float: right;
  margin-right: 40rpx;
  border-radius: 5rpx;
}
.content-edit image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 0 auto;
}
.content-edit .ql-container{
  padding: 40rpx;
  caret-color: #F5A623;
  font-size:34rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:46rpx;
}
.content-edit text{
  text-align: right;
  padding-right:46rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
/* 设置不可用状态的背景色 */
.sendcodebtn[disabled][type="default"],wx-button[disabled]:not([type]){
  background-color:rgba(245,166,35,0.5);
  color: #ffffff;
}
.btn{
  position: absolute;
  left:5%;
  bottom:5%;
  width:90%;
  background:rgba(245,166,35,1);
  border-radius:8rpx;
  font-size:38rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  letter-spacing:20rpx;
}