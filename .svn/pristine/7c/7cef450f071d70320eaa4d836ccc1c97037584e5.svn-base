/* pages/index/article-detail/article-detail.wxss */
page {
  font-family:PingFang-SC-Regular;
  font-weight: 400;
  letter-spacing: 5rpx;
}
.backgroundImg {
  width: 100%;
  height: 50%;
  background-size: cover;
  box-sizing: border-box;
  filter: blur(20rpx);
  position: fixed;
  z-index: -1;
  top: 0;
}
.head {
  position: fixed;
  left: 0;
  top: 0rpx;
  z-index: 155;
  height: 132rpx;
  width: 100%;
  text-align: center;
}
.head image {
  width: 40rpx;
  height: 40rpx;
  /* margin: 60rpx 20rpx;
  float: left; */
  position: absolute;
  left: 20rpx;
  bottom: 30rpx;
}
.head text {
  position: absolute;
  left: 60rpx;
  bottom: 30rpx;
  width: 480rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;  
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.user {
  width: 84%;
  height: 170rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 8rpx 18rpx 0rpx rgba(153,153,153,1);
  border-radius: 10rpx;
  position: fixed;
  left: 8%;
  top: 0rpx;
  z-index: 155;
}
.userinfo {
  width: 100%;
  margin-bottom: 0.5rem;
}
.userinfo .userimg {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 14rpx 0;
  margin-left: 26rpx;
  float: left;
}
.userName {
  margin-left: 10rpx;
  line-height: 26rpx;
  float: left;
  margin-top: 29rpx;
  font-size: 24rpx;
}
.author {
  float: right;
  color: #8E7037;
  margin-top: 24rpx;
  font-size: 32rpx;
  margin-right: 80rpx;
}
.ellipsis {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 20rpx;
  top: 24rpx;
}
.progress-outer {
  clear: both;
  width: 95%;
  margin: 20rpx 2% 10rpx;
  text-align: center;
  color: #fff;
  border-radius: 40rpx;
}

.userimglist {
  clear: both;
  width: 100%;
  height: 60rpx;
  padding: 6rpx 20rpx;
}
.userimglist image {
  float: left;
  margin-right: 29rpx;
  width: 40rpx;
  height: 40rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.article {
  padding-top: 20rpx;
  overflow:hidden;
}
.left-arrow {
  position: fixed;
  left: 0;
  top: 60%;
  width: 40rpx;
  height: 40rpx;
}
.right-arrow {
  position: fixed;
  right: 0;
  top: 60%;
  width: 40rpx;
  height: 40rpx;
}
.articleList {
  padding-top: 10rpx;
  margin: auto;
  margin-bottom: 24rpx;
  width: 84%;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 10rpx 0rpx rgba(153,153,153,1);
  border-radius: 10rpx;
}
.tower {
  width: 100%;
  font-size: 28rpx;
  padding: 60rpx 40rpx 32rpx 40rpx;
}
.tower text {
  color:rgba(153,153,153,1);
  line-height: 40rpx;
  float: right;
  margin-right: 70rpx;
}
.tower label {
  border: 2rpx solid #8E7037;
  padding: 4rpx 20rpx;
  color: #8E7037;
}
.content {
  width: 88%;
  font-size: 34rpx;
  color:rgba(51,51,51,1);
  line-height: 42rpx;
  min-height: 450rpx;
  letter-spacing: 2rpx;
  margin: auto;
}
.foot {
  display: -webkit-flex;
  justify-content: space-between;
  padding: 22rpx 40rpx; 
}
.foot view image {
  width: 44rpx;
  height: 44rpx;  
  margin-right: 10rpx;
}
.foot view text {
  color: #666666;
  font-size: 32rpx;
}
.right-suspension {
  width: 96rpx;
  height: 192rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 0rpx 8rpx 0rpx rgba(216,216,216,1);
  border-radius: 20rpx;
  position: fixed;
  z-index: 100;
  right: 14rpx;
  top: 65%;
}
.right-suspension view {
  width: 100%;
  height: 50%;
  text-align: center;
}
.suspension-star {
  border-bottom: 2rpx solid lightgray;
}
.right-suspension view image {
  width: 44rpx;
  height: 44rpx;
  padding: 24rpx 26rpx;
}
.mengban {
  width: 100%;
  height: 100%;
  background-color: rgb(53, 53, 53);
  opacity: 0.5;
  position: absolute;
  z-index: 200;
  left: 0;
  top: 0;
}
.picker {
  width: 90%;
  background-color: white;
  border-radius: 40rpx;
}
.picker-colum {
  width: 100%;
  height: 114rpx;
  background-color: white;
  border-radius: 40rpx;
  color: #333333;
  line-height: 114rpx;
  border-bottom: 2rpx solid #333333;
}
.canncel {
  width: 90%;
  height: 114rpx;
  background-color: white;
  border-radius: 40rpx;
  line-height: 114rpx;
  color: #007AFF;
}

.content-textarea {
  width: 100%;
  background-color: #fff;
  margin-top: 132rpx;
  height: 100%;
  font-size: 30rpx;
}
.brain_hole {
  width: 90%;
  height: 80rpx;
  margin: 2% 5%;
  line-height: 80rpx;
  display: inline-flex;
  justify-content: space-between;
}
.quxiao {
  color:rgba(153,153,153,1);
}
.release_comment {
  background:rgba(142,112,55,0.5);
  border-radius:2rpx;
  color:rgba(255,255,255,1);
  padding: 0rpx 14rpx;
  margin: 15rpx 0rpx;
  line-height: 50rpx;
}
.content-textarea image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
#editor {
  width: 90%;
  margin: auto;
}
.brain_hole_foot {
  width: 90%;
  margin: auto;
  text-align: right;
  font-size: 28rpx;
  color:rgba(153,153,153,1);
}
.brain_hole_foot view {
  margin-bottom: 20rpx;
}