/* pages/my/my-mine/my-mine.wxss */

page {
  background: #f8f8f8;
}

.bg-white {
  background: #f8f8f8;
}

.tip {
  text-align: center;
  padding: 10rpx 0;
  padding-bottom: 40rpx;
  display: block;
  font-size: 28rpx;
  color: #777;
}

.bg-img {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 700rpx;
  z-index: -1;
}

.bg-img::after {
  position: absolute;
  content: "";
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.4));
}

.my-head {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}

.my-head .top {
  position: relative;
  padding: 40rpx 66rpx;
  min-height: 120rpx;
}

.my-head .top .tx {
  position: absolute;
  top: 40rpx;
  left: 66rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}

.my-head .top  .ul {
  padding-left: 180rpx;
  font-size: 0;
  text-align: center;
}

.my-head .top  .ul .li {
  display: inline-block;
  width: 33.33%;
}

.my-head .top .p {
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  padding-top: 22rpx;
}

.my-head .span {
  display: block;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
}

.my-head .bottom {
  padding: 0 70rpx;
  padding-bottom: 60rpx;
  position: relative;
}

.my-body {
  background: #f8f8f8;
  padding-bottom: 50rpx;
}

.my-body .ul .li {
  padding: 20rpx 46rpx;
  background: #fff;
  margin-bottom: 20rpx;
  box-shadow: 0px 4px 12px 2px rgba(221, 221, 221, 0.5);
  border-radius: 8px;
}

.my-body .ul .li .h3 {
  font-size: 34rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.my-body .ul .li .p {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 48rpx;
  letter-spacing: 2rpx;
  margin: 20rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.my-body .ul .li .span {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.head-nav {
  width: 100%;
  z-index: 99;
  background: #fff;
  position: sticky;
  text-align: center;
  display: flex;
  justify-content: space-around;
  box-shadow: 0px 8px 18px 0px rgba(238, 238, 238, 1);
}

.head-nav .nav-li {
  width: 20%;
  display: inline-block;
  padding: 12rpx 0;
}

.head-nav .nav-li text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  letter-spacing: 2rpx;
  padding: 8rpx 0;
  display: block;
  border-bottom: 4rpx solid transparent;
  transition: 0.3s;
}

.head-nav .nav-li.active text {
  border-color: #f5a623;
  font-weight: bold;
}

.nav {
  min-height: 0px;
  color: #fff;
  z-index: 9999;
  position: relative;
}

.head {
  position: fixed;
  width: 100%;
  top: 0;
  display: flex;
}

.head.active .title {
  color: #333;
}

.title {
  position: absolute;
  text-align: center;
  width: calc(100% - 340rpx);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  pointer-events: none;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  transition: 0.5s;
}

.backBtn {
  margin-left: 30rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  height: 100%;
  justify-content: center;
  max-width: 100%;
}

.backBtn image {
  width: 56rpx;
  height: 56rpx;
  transition: 0.5s;
}
