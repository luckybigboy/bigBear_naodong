/* pages/my/my-index/my-index.wxss */

page {
  background: #f8f8f8;
}

.top {
  position: relative;
  background: #fff;
  padding-bottom: 80rpx;
  padding-top: 30rpx;
  box-shadow: 0 0 4rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.top .tx {
  position: absolute;
  left: 24rpx;
  top: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.top .right {
  padding-left: 196rpx;
  padding-right: 140rpx;
}

.top .right .h3 {
  font-size: 40rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 56rpx;
  letter-spacing: 2rpx;
  display: block;
  margin-bottom: 10rpx;
}

.top .right .p {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.ul {
  background: #fff;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #bcbbc1;
}

.ul .li {
  position: relative;
  padding: 38rpx 20rpx;
  padding-left: 85rpx;
}

.ul .li text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.ul .li .tx {
  position: absolute;
  left: 20rpx;
  top: 39rpx;
  width: 44rpx;
  height: 44rpx;
}

.ul .li .icon-arrow {
  position: absolute;
  right: 20rpx;
  top: 42rpx;
  width: 30rpx;
  height: 30rpx;
}

