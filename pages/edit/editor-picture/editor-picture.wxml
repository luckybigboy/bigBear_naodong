<!--pages/edit/editor-picture/editor-picture.wxml-->
<image-cropper id="image-cropper" bindload="cropperload" bindimageload="loadimage" limit_move="true" disable_rotate="true" width="{{width}}" height="{{height}}" imgSrc="{{src}}" angle="{{angle}}" disable_width="true" max_width="{{max_width}}" max_height="{{max_height}}" disable_height="true" disable_ratio="true">
</image-cropper>
<view class='bottom'>
  <view class='imgs' catchtouchstart='rotate' catchtouchend='end' data-type="rotate">
      <image src='/images/initiate/ratio.png' />
  </view>
  <view class='bottom-btn'>
    <button bindtap='goBack'>取消</button>
    <button bindtap='back'>还原</button>
    <button bindtap='submit'>确定</button>
  </view>
</view>
