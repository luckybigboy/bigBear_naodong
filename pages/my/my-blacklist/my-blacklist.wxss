/* pages/my/my-blacklist/my-blacklist.wxss */
page {
  background-color: #f8f8f8;
}

view {
  box-sizing: border-box;
}

.item-box {
  margin: 0 auto;
  background-color: #fff;
}

.items {
  width: 100%;
}

.item {
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
}

.inners {
  position: relative;
  top: 0;
}

.inners .img {
  position: absolute;
  left: 20rpx;
  top: 17rpx;
  width: 84rpx;
  height: 84rpx;
}

.inners .title {
  font-size:34rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:#333;
  position:absolute;
  height:0;
  left:151rpx;
}

.inners.txt {
  background-color: #fff;
  width: 100%;
  z-index: 5;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 32rpx;
}

.inner.del {
  background-color: #e64340;
  width: 144rpx;
  text-align: center;
  z-index: 4;
  color: #fff;
  right: 0;
  position: absolute;
  top: 0;
  font-size: 34rpx;
}

.angleImg{
  width: 28rpx;
  height: 28rpx;
  position: relative;
  left: 665rpx;
}

.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  height: 326rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 38rpx;
  font-size: 34rpx;
  color: #000;
  text-align: center;
}

.modal-title2 {
  padding-top: 48rpx;
  font-size: 26rpx;
  color: #000;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top:72rpx;
}

.btn-cancel {
  width: 50%;
  color: #007AFF;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #007AFF;
  text-align: center;
}

/* 暂无黑名单 */
.hide {
  text-align: center;
}	

.hide .img {
  width: 385rpx;
  height: 206rpx;
  padding-top:312rpx;
}

.hide .cont {
  color: #999;
  font-size: 32rpx;
  padding-top:66rpx;
}
